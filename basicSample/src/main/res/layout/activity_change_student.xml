<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <TextView
        android:id="@+id/tv_c_firstname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Имя:" />

    <EditText
        android:id="@+id/et_c_firstname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/tv_c_lastname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Фамилия:" />

    <EditText
        android:id="@+id/et_c_lastname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_c_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Группа:" />

        <EditText
            android:id="@+id/et_c_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_c_sgroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Подгруппа:" />

        <EditText
            android:id="@+id/et_c_sgroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number" />
    </LinearLayout>

    <Button
        android:id="@+id/c_ok"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="@drawable/hbutton"
        android:text="Сохранить" />

</LinearLayout>